<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_wizard_view_form" model="ir.ui.view">
        <field name="name">product.wizard.view.form</field>
        <field name="model">product.wizard</field>
        <field name="arch" type="xml">
            <form string="Product list">
                <sheet>
                    <group>
                        <field name="treatment_ids" invisible="1"/>
                        <field name="product_ids" widget="many2many_tags"/>
                    </group>
                    <footer>
                        <button string="Confirm" type="object" name="confirm_action" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
</odoo>